<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping SYSTEM
			"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<!--

Mapping file for the Notification class of the Filemanager API

A Notification is a message sent to the user informing them of a change in the
status of their transfer. The deliver mechanism is determined by the userType field.

@author Rion Dooley < dooley [at] cct [dot] lsu [dot] edu >

-->
<hibernate-mapping package="edu.utexas.tacc.wcs.filemanager.common.model">

<typedef name="notification_type" class="edu.utexas.tacc.wcs.filemanager.service.model.EnumUserType">
	<param name="enumClassName">edu.utexas.tacc.wcs.filemanager.common.model.enumeration.NotificationType</param>
</typedef>
  
<class name="edu.utexas.tacc.wcs.filemanager.common.model.Notification" 
	   table="portal.filemgr_notifications" 
	   lazy="true">

	<id name="id"
		type="java.lang.Integer"
		column="id"
		unsaved-value="null">
		<generator class="sequence">
			<param name="sequence">filemgr_notification_id_seq</param>
		</generator>
	</id>

	<property name="transferId" type="java.lang.Long" column="transferid"/>
	<property name="type" type="notification_type" column="notificiationtype"/>
	<property name="subject" type="string" column="subject"/>
	<property name="message" type="string" column="message"/>
	<property name="created" type="java.util.Calendar" column="created"/>
	<property name="deliveryDate" type="java.util.Calendar" column="deliverydate"/>
	<property name="username" type="string" column="username"/>
	<property name="address" type="string" column="address"/>
				
</class>

</hibernate-mapping>
